<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="tests">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>src/Auth/Infrastructure/Model</directory>
            <directory>src/ToDoList/Infrastructure/Model</directory>
        </exclude>
    </source>
    <coverage>
        <report>
            <html outputDirectory="./tests/test-reports/html" />
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>
    <php>
        <!--<env name="APP_ENV" value="testing"/>-->
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="mysql"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="laravel"/>
        <env name="DB_USERNAME" value="laravel"/>
        <env name="DB_PASSWORD" value="secret"/>
        <!--<env name="MAIL_MAILER" value="array"/>-->
        <env name="PULSE_ENABLED" value="false"/>
        <!--<env name="QUEUE_CONNECTION" value="sync"/>-->
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
